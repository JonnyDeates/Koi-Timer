{
  "name": "koi-timer",
  "version": "2.0.0",
  "description": "",
  "scripts": {
    "clean": "rmdir /s /q .\\build && mkdir .\\build",
    "copyFrontend": "cp ./sitemap/* ./build/ && cp -r ../public/dist/* ./build/",
    "dev": "tsx watch src/index.ts",
    "build": "esbuild src/index.ts --bundle --minify --platform=node --outfile=dist/index.js --external:express --external:cors",
    "buildFrontend": "cd ../../ && pnpm build && cd - && pnpm copyFrontend",
    "monorepo": "pnpm run buildFrontend && tsx watch src/index.ts",
    "start": "node dist/index.js",
    "type-check": "tsc"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "knex": "^3.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/uuid": "10.0.0",
    "dotenv": "^16.4.5",
    "esbuild": "^0.23.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4"
  }
}
