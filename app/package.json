{
  "name": "app",
  "version": "2.0.0",
  "description": "",
  "scripts": {
    "monorepo": "cd ../ && npm run build && cd ./app && ./scripts/copyFrontends.sh && tsx watch src/index.ts",
    "monorepo-dev": "./scripts/copyFrontends.sh && tsx watch src/index.ts",
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --external:express --external:cors",
    "start": "node dist/index.js",
    "type-check": "tsc",
    "predeploy": "docker build . -t jonnydeates/koi-timer:$npm_package_version -t jonnydeates/koi-timer:latest",
    "deploy": "npm run predeploy && docker push jonnydeates/koi-timer:$npm_package_version && docker push jonnydeates/koi-timer:latest"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^6.1.5",
    "knex": "^2.4.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/uuid": "9.0.1",
    "dotenv": "^16.0.3",
    "esbuild": "^0.18.17",
    "tsx": "^3.12.6",
    "typescript": "^5.0.4"
  }
}
